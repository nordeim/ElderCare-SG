{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "allowJs": true,
        "types": [
            "vitest",
            "vitest/globals",
            "@testing-library/jest-dom"
        ],
        "jsx": "preserve",
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/js/*"]
        }
    },
    "include": [
        "resources/js/**/*",
        "resources/js/tests/**/*",
        "vitest.config.ts"
    ]
}
